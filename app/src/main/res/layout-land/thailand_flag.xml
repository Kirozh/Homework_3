<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource">

    <FrameLayout
        android:id="@+id/top_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/thailand_red"
        app:layout_constraintBottom_toTopOf="@+id/top_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_weight="1">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/top_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_red">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/purple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/thailand_purple"
        app:layout_constraintVertical_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/bottom_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_white">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottom_white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/bottom_red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/purple">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/bottom_red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/thailand_red"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottom_white">

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>